{
  "manifest_version": 2,
  "name": "Callcentric Recent Calls Phonebook Matchup",
  "short_name": "Callcentric Phone Match",
  "version": "1.0.5",
  "description": "Show which entries in the recently called list are already in the Callcentric phonebook.",
  "permissions": [
    "https://my.callcentric.com/"
  ],
  "web_accessible_resources": [
    "phonebook-small.png"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": [
        "https://my.callcentric.com/calls_received.php",
        "https://my.callcentric.com/calls_made.php",
        "https://my.callcentric.com/home.php"
      ],
      "css": ["styles.css"],
      "js": ["script.js"]
    }
  ]
}
